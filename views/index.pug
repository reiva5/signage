doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		title Slider
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons')
		link(rel='stylesheet', href='https://unpkg.com/bootstrap-material-design@4.0.0-beta.4/dist/css/bootstrap-material-design.min.css', integrity='sha384-R80DC0KVBO4GSTw+wZ5x2zn2pu4POSErBkf8/fSFhPXHxvHJydT0CSgAP2Yo2r4I', crossorigin='anonymous')
	body
		.container-fluid.bg-dark
			#carouselExampleIndicators.carousel.slide(data-ride='carousel')
				ol.carousel-indicators
					li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
					li(data-target='#carouselExampleIndicators', data-slide-to='1')
					li(data-target='#carouselExampleIndicators', data-slide-to='2')
				.carousel-inner
					.carousel-item.active
						img.d-block.w-75.mx-auto(src='/images/photokopi.jpeg', alt='First slide')
						.container
							.carousel-caption
								h1 Title.
								p Content paragraph
								p
									a.btn.btn-raised.btn-secondary(href='#', role='button') Link Button
					.carousel-item
						img.d-block.w-75.mx-auto(src='/images/logo.jpg', alt='Second slide')
						.container
							.carousel-caption
								h1 Title.
								p Content paragraph
								p
									a.btn.btn-raised.btn-secondary(href='#', role='button') Link Button
					.carousel-item
						img.d-block.w-75.mx-auto(src='/images/photomendung.jpeg', alt='Third slide')
						.container
							.carousel-caption
								h1 Title.
								p Content paragraph
								p
									a.btn.btn-raised.btn-secondary(href='#', role='button') Link Button
				a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
					span.carousel-control-prev-icon(aria-hidden='true')
					span.sr-only Previous
				a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
					span.carousel-control-next-icon(aria-hidden='true')
					span.sr-only Next
		script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
		script(src='https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js', integrity='sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U', crossorigin='anonymous')
		script(src='https://unpkg.com/bootstrap-material-design@4.0.0-beta.4/dist/js/bootstrap-material-design.js', integrity='sha384-3xciOSDAlaXneEmyOo0ME/2grfpqzhhTcM4cE32Ce9+8DW/04AGoTACzQpphYGYe', crossorigin='anonymous')
		script.
			$(document).ready(function() { $('body').bootstrapMaterialDesign(); });
